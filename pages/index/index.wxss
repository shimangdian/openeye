/**index.wxss**/
image{
  height: 400rpx;
}
.container{
  width: 100%;
}
.container .section{
  position: relative;
  width: 100%;
}
.container .section image{
  display: block
}
.container .section .supernatant{
  position: absolute;
  width: 100%;
  height: 100%;
    top: 0;
  left:0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;

}
.container .section .bg{
  background: black;
  opacity: .6;
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left:0;
}
.container .section .supernatant .title,
.container .section .supernatant .tag{
  color: #fff;
  font-family: "黑体";
}
.container .section .supernatant .tag{
  font-weight: 100;
  margin-top:50rpx; 
}
.container .oldsec{
  margin-bottom: 10rpx;
}
.container .section .old{
  text-align: center;
  padding: 40rpx 0;
  background: #fff;
  width: 100%;
  display: block;
  font-size: 12px;
  letter-spacing: 5rpx;
  border-bottom: 1px solid #eee;
}
.container .section .section_gap{
  padding: 10rpx; 
}
.container .section .typeheader {
  position: relative;
}
.container .section .typeheader .sanjiao{
  width: 0;
  border-bottom: 6px solid #fff;
  border-left: 6px solid transparent;
  border-right: 6px solid transparent;
  position: absolute;
  right:0;
  left:0;
  bottom:0;
  margin: 0 auto;
}
.container .section scroll-view{
  width: 100%;
  white-space: nowrap;
  display: flex
}
.container .section scroll-view .videoitem {
  display: inline-block;
  margin-right:10rpx; 
  position: relative;
  width: 80%;
  overflow:hidden;
}

.container .section scroll-view .videoitem .videotitle,
.container .section scroll-view .videoitem .videotext .videotag{
  font-family: '黑体';
  color: black;
  font-size:13px;
}
.container .section scroll-view .videoitem .videotext .videotag{
  color: #999;
  font-size: 12px;
}
.container .section scroll-view .videoitem .videotext{
  padding: 10rpx;
}

